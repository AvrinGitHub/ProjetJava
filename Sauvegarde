package projetjava;

public void sauvegarde(String[][] Grille ){
import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.io.Reader;
import java.util.ArrayList;

@SuppressWarnings("empty-statement")
public static void tabRec(String file , String[][] tab) throws FileNotFoundException{
    
        try (PrintWriter pr = new PrintWriter(file)) {
            for (int i=0 ; i<15 ; i++){
                for (int j=0 ; j<15 ; j++){
                    pr.println(tab[i][j]);
                }
            }
        }
}
public static void TabRecup(String file ) throws IOException{
    String[][] tab = new String[15][15];
    InputStream is = new FileInputStream(file);
  Reader tmpReader = new InputStreamReader(is, "utf-8");
  BufferedReader reader = new BufferedReader(tmpReader);
  int i=0;
  int j=0;
  try {
    for(String line = reader.readLine(); line != null; line = reader.readLine()) {
      tab[i][j]=line;
      j++; 
      if (j==15){
          j=0;
          i++;
      }   
    }
    
  } finally {
    reader.close();
  }
    
  for (int k =0 ; k<15 ; k++){
        for (int l=0 ; l<15 ; l++){
            System.out.print(tab[k][l]);
        }
        System.out.println(" ");
    }
}
 