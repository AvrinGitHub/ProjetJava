package projetjava;

import java.util.Scanner;

/**
 *
 * @author Admin
 */
public class SousMarin extends Navire {

    
    public static boolean detecterSiOk(int i, int j , int orientation , int typeBateau , int ligneTab , int[][] coordonnee){// ligneTab pour savoir quelle ligne modifier dans coordonnee apres 
        
        for (int z=0 ; z<10 ; z++ ){
            if (coordonnee[z][0]==i && coordonnee[z][1]== j && coordonnee[z][3]==typeBateau && coordonnee[z][4]==1){
               ligneTab=z;
               return true;
            }
        }
        return false;     
    }

    public static void choixSens(String[][] Grille, int i, int j , int tourJoueur , int[][] coordonneBateauAllie , int[][] coordonneBateauIa) {
        int nombreChoix=0;
        int ligneTab=0 ; 
        boolean test = false; 

        if (tourJoueur%2==0){
            System.out.println("Dans quel sens souhaitez-vous dÃ©placer le sous-marin ?");
            System.out.println(" Selectionner 1, 2, 3 ou 4. \n 1: Deplacer vers le haut \n 2. Deplacer vers la droite \n 3. Deplacer vers le bas \n 4. Deplacer vers la gauche");
            nombreChoix = new Scanner(System.in).nextInt();
        }
        if (tourJoueur%2==1){
            int max = 4;
            int min = 1;
            nombreChoix = (int)(Math.random()* (max - min + min) + min);

        }
        if(test==true){
        switch( nombreChoix ) {
            case 1: 
                if(i!=0 && Grille[i-1][j].equals("  ")){
                        Grille[i-1][j]=Grille[i][j];
                        Grille[i][j]="  ";
                        if (tourJoueur%2==0){
                            coordonneBateauAllie[ligneTab][0]= i-1; 
                        }
                        if (tourJoueur%2==1){
                            coordonneBateauIa[ligneTab][0]= i-1;

                        }
                    }
                    else{
                        System.out.println("Deplacement impossible.");
                        System.out.println("Veuillez choisir une nouvelle action.");
                        if (tourJoueur%2==0){
                            MenuDuJeu.menuDuTour(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
                        }
                        if (tourJoueur%2==1){
                            MenuDuJeu.menuDuTourIa(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
                        }
                    }
                break;
            case 2: 
               if(j!=14 && Grille[i][j+1].equals("  ")){
                        Grille[i][j+1]=Grille[i][j];
                        Grille[i][j]="  ";
                        if (tourJoueur%2==0){
                            coordonneBateauAllie[ligneTab][1]= j+1; 
                        }
                        if (tourJoueur%2==1){
                            coordonneBateauIa[ligneTab][1]= j+1;
                        }
                    }
                    else{
                        System.out.println("Deplacement impossible.");
                        System.out.println("Veuillez choisir une nouvelle action.");
                        if (tourJoueur%2==0){
                            MenuDuJeu.menuDuTour(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
                        }
                        if (tourJoueur%2==1){
                            MenuDuJeu.menuDuTourIa(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
                        }
                    }
                break;
            case 3:
                if(i!=14 && Grille[i+1][j].equals("  ")){
                        Grille[i+1][j]=Grille[i][j];
                        Grille[i][j]="  ";
                        if (tourJoueur%2==0){
                            coordonneBateauAllie[ligneTab][0]= i+1; 
                        }
                        if (tourJoueur%2==1){
                            coordonneBateauIa[ligneTab][0]= i+1;
                        }
                    }
                    else{
                        System.out.println("Deplacement impossible.");
                        System.out.println("Veuillez choisir une nouvelle action.");
                        if (tourJoueur%2==0){
                            MenuDuJeu.menuDuTour(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
                        }
                        if (tourJoueur%2==1){
                            MenuDuJeu.menuDuTourIa(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
                        }
                    }
                break;
            case 4:
                if(j!=0 && Grille[i][j-1].equals("  ")){
                        Grille[i][j-1]=Grille[i][j];
                        Grille[i][j]="  ";
                        if (tourJoueur%2==0){
                            coordonneBateauAllie[ligneTab][1]= j-1; 
                        }
                        if (tourJoueur%2==1){
                            coordonneBateauIa[ligneTab][1]= j-1;
                        }
                    }
                    else{
                        System.out.println("Deplacement impossible.");
                        System.out.println("Veuillez choisir une nouvelle action.");
                        if (tourJoueur%2==0){
                            MenuDuJeu.menuDuTour(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
                        }
                        if (tourJoueur%2==1){
                            MenuDuJeu.menuDuTourIa(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
                        }
                    }
                break;
            default:
                
                if (tourJoueur%2==0){
                    System.out.println( "Entre 1 et 4 svp" );
                    MenuDuJeu.menuDuTour(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
                }
                if (tourJoueur%2==1){
                    MenuDuJeu.menuDuTourIa(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
                }
        }
    }
        else{
            if (tourJoueur%2==0){
                System.out.println("Selection impossible");
                MenuDuJeu.menuDuTour(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
                        }
            if (tourJoueur%2==1){
                MenuDuJeu.menuDuTourIa(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
            }
        }
    }
    
    @Override
    public void Tir(String sousmarin) {
        
    }

    @Override
    public void Deplacement(String sousmarin, String[][] Grille, int i, int j , int tourJoueur , int[][] coordonneBateauAllie , int[][] coordonneBateauIa) {
        if (sousmarin.equals("SS")){
            choixSens(Grille, i, j , tourJoueur, coordonneBateauAllie, coordonneBateauIa);         
        }
        else{
            if (tourJoueur%2==0){
                System.out.println("Selection impossible");
                System.out.println("Recommencez");
                MenuDuJeu.menuDuTour(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie, coordonneBateauIa );
            }
            if (tourJoueur%2==1){
                MenuDuJeu.menuDuTourIa(tableAllie, tableAllieTir, tableIa, tableIaTir , tourJoueur , coordonneBateauAllie , coordonneBateauIa);
            }
        
        }
    }    
}
